<% if @user != current_user %>
  <%= render "friend_dashboard" %>
<% else %>
  <div class="welcome_back_container">
    <p class="left">Welcome back, <span class="name"><%= @user.player_name %></span> </p>

    <a href="<%= ENV["ADAGE_PROFILE_URL"] %>" class="right">
      <div class="blue_button">
          <p>Update Profile</p>
      </div>
    </a>
  </div>

  <% if @user.has_role(:teacher)%>
    <%= render "teacher_dashboard" %>
  <% else %>
    <%= render "student_dashboard" %>
  <% end %>
<% end %>