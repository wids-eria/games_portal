<%= render "unity", game: @game.path %>

<div class="welcome_back_container">
    <p class="left"><%= @game.name %></p>

    <% unless @game.microsite.empty? %>
      <%= link_to @game.microsite, class: "right" do %>
        <div class="blue_button">
            <p>More Info</p>
        </div>
      <% end %>
    <% end %>
</div>

<div id="play_container">
  <% if @game.external_download.empty? %>
    <% if @game.localpath.empty? %>
      <div id="unityPlayer" class="center">
        <div class="missing">
          <a href="http://unity3d.com/webplayer/" title="Unity Web Player. Install now!">
            <img alt="Unity Web Player. Install now!" src="http://webplayer.unity3d.com/installation/getunity.png" width="193" height="63" />
          </a>
        </div>
      </div>
    <% else %>
      <div id="Player">
        <%= raw(@file)%>
      </div>
    <% end %>
  <% else %>
    <div id="instructions" class="module one_third">
      <h2>Download Instructions</h2>
      <hr/>
      <p>
        <b><%= @game.name %></b> is not available on the GLS Games Portal. You can access <b><%= @game.name %></b> by downloading it from iTunes/Google Play/etc. Search for
        <b><%= @game.name %></b> and download it there!
      </p>
      <hr/>
      <div id="external">
        <%= link_to @game.external_download do %>
          <div class="blue_button center">
            <p>Download</p>
          </div>
      <% end %>
      </div>
    </div>
  <% end %>
</div>

<% if @game.survey.nil? %>
  <div class="module full">
      <h2>Quiz</h2>
          <hr>
      <p>Question</p>
  </div>
<% end %>