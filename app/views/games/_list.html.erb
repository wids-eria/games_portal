<div id="container">
  <%= div_for(games) do |g| %>
     <div class="placeholder">
      <%= link_to play_game_url(id: g.path) do %>
          <%= image_tag g.image.url %>
      <% end %>
     </div>

    <div class="description">
      <h1><%= g.name %></h1>
      <p><%= g.description %></p>
    </div>

    <div id="game_links">
      <%= link_to "Play",play_game_url(id: g.path), class: "link"%>
      <%= link_to "Resources",game_landing_url(id: g.path), class: "link" %>
    </div>
  <% end %>
</div>