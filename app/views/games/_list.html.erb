<%= div_for(games, class: "project_container_first") do |g| %>
  <img src="<%= g.image.url %>" class="left"/>

  <div class="project_description">
    <div class="project_description_header"><p><%= g.name %></p></div>
    <div class="project_description_paragraph"><p><%= g.description %></p></div>
  </div>
  <ul class="project_nav_container">
    <a class="fancybox" >
      <% if g.file.exists? or g.external_download %>
        <%= link_to play_game_url(id: g.path) do %>
          <li class="view_trailer_button">
            <div class="play_icon"></div>
            Play
          </li>
        <% end %>
      <% end %>

      <% if can? :resource, g  %>
        <% if g.cirriculum.exists? %>
          <%= link_to g.cirriculum.url, target: "_blank" do %>
            <li class="view_resources_button">
                <div class="resources_icon"></div>
                Cirriculum
            </li>
          <% end %>
        <% end %>

        <% if g.lesson_plan.exists? %>
          <%= link_to g.lesson_plan.url, target: "_blank"  do %>
          <li class="view_lesson_plan_button">
              <div class="lesson_plan_icon"></div>
              Lessons
          </li>
          <% end %>
        <% end %>
      <% end %>
    </a>
  </ul>
<% end %>